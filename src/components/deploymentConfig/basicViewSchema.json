{
    "type": "object",
    "properties": {
        "args": {
            "type": "object",
            "title": "Arguments",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "title": "Value",
                    "hidden": {
                        "condition": false,
                        "match": "enabled"
                    }
                },
                "enabled": {
                    "type": "boolean",
                    "title": "Enabled"
                }
            }
        },
        "command": {
            "type": "object",
            "title": "Command",
            "properties": {
                "value": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "title": "Value",
                    "hidden": {
                        "condition": false,
                        "match": "enabled"
                    }
                },
                "enabled": {
                    "type": "boolean",
                    "title": "Enabled"
                }
            }
        },
        "ingress": {
            "type": "object",
            "title": "HTTP Requests Routes",
            "properties": {
                "className": {
                    "type": "string",
                    "title": "Class",
                    "hidden": {
                        "condition": false,
                        "match": "enabled"
                    }
                },
                "hosts": {
                    "type": "array",
                    "items": {
                        "type": "object",
                        "properties": {
                            "host": {
                                "type": "string"
                            },
                            "paths": {
                                "type": "array",
                                "items": {
                                    "type": "string"
                                }
                            }
                        }
                    },
                    "hidden": {
                        "condition": false,
                        "match": "enabled"
                    }
                },
                "enabled": {
                    "type": "boolean",
                    "title": "Enable HTTP Requests Routes"
                }
            }
        },
        "resources": {
            "type": "object",
            "title": "Resources (CPU & RAM)",
            "properties": {
                "limits": {
                    "type": "object",
                    "required": ["cpu", "memory"],
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                },
                "requests": {
                    "type": "object",
                    "properties": {
                        "cpu": {
                            "type": "string"
                        },
                        "memory": {
                            "type": "string"
                        }
                    }
                }
            }
        },
        "autoscaling": {
            "type": "object",
            "title": "Autoscaling",
            "properties": {
                "MaxReplicas": {
                    "type": ["integer", "string"],
                    "title": "Maximum Replicas",
                    "pattern": "^[a-zA-Z0-9-+\/*%_\\s]+$",
                    "hidden": {
                        "condition": false,
                        "match": "enabled"
                    }
                },
                "MinReplicas": {
                    "type": ["integer", "string"],
                    "title": "Minimum Replicas",
                    "pattern": "^[a-zA-Z0-9-+\/*%_\\s]+$",
                    "hidden": {
                        "condition": false,
                        "match": "enabled"
                    }
                },
                "TargetCPUUtilizationPercentage": {
                    "type": ["integer", "string"],
                    "title": "Target CPU Utilization Percentage",
                    "pattern": "^[a-zA-Z0-9-+\/*%_\\s]+$",
                    "hidden": {
                        "condition": false,
                        "match": "enabled"
                    }
                },
                "TargetMemoryUtilizationPercentage": {
                    "type": ["integer", "string"],
                    "title": "TargetMemoryUtilizationPercentage",
                    "pattern": "^[a-zA-Z0-9-+\/*%_\\s]+$",
                    "hidden": {
                        "condition": false,
                        "match": "enabled"
                    }
                },
                "enabled": {
                    "type": "boolean",
                    "title": "Enabled"
                }
            }
        },
        "EnvVariables": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "value": {
                        "type": "string"
                    }
                }
            },
            "title": "Environment Variables"
        },
        "ContainerPort": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "port": {
                        "type": "integer"
                    },
                    "servicePort": {
                        "type": "integer"
                    }
                },
                "required": ["port", "servicePort"]
            },
            "title": "Container Port"
        },
        "service": {
            "type": "object",
            "title": "Service",
            "properties": {
                "type": {
                    "type": "string",
                    "title": "Type"
                },
                "annotations": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    },
                    "title": "Annotations"
                }
            }
        },
        "ReadinessProbe": {
            "type": "object",
            "title": "Readiness Probe",
            "properties": {
                "Path": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                }
            }
        },
        "LivenessProbe": {
            "type": "object",
            "title": "Liveness Probe",
            "properties": {
                "Path": {
                    "type": "string"
                },
                "port": {
                    "type": "integer"
                }
            }
        },
        "tolerations": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "key": {
                        "type": "string"
                    },
                    "operator": {
                        "type": "string",
                        "pattern": "Equal|Exists"
                    },
                    "value": {
                        "type": "string"
                    },
                    "effect": {
                        "type": "string",
                        "pattern": "NoSchedule|PreferNoSchedule|NoExecute"
                    }
                }
            }
        },
        "serviceAccount": {
            "type": "object",
            "properties": {
                "create": {
                    "type": "boolean"
                },
                "name": {
                    "type": "string",
                    "hidden": {
                        "condition": false,
                        "match": "create"
                    }
                }
            }
        }
    }
}
