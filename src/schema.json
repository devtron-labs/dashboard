{
  "type": "object",
  "title": "Devtron Application Schema",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "required": [
    "version",
    "kind",
    "overview"
  ],
  "properties": {
    "kind": {
      "type": "string"
    },
    "actions": {
      "type": "object"
    },
    "version": {
      "type": "string"
    },
    "overview": {
      "type": "object",
      "required": [
        "id",
        "metadata"
      ],
      "properties": {
        "id": {
          "type": "number"
        },
        "icon": {
          "type": "string",
          "contentEncoding": "base64"
        },
        "name": {
          "type": "string"
        },
        "tags": {
          "additionalProperties": {
            "type": "string"
          }
        },
        "metadata": {
          "type": "object",
          "required": [
            "Owners & Pager Duty"
          ],
          "properties": {
            "Documentation": {
              "type": "object",
              "properties": {
                "Runbook": {
                  "type": "string",
                  "format": "uri"
                },
                "Service Doc": {
                  "type": "string",
                  "format": "uri"
                },
                "API Contract": {
                  "type": "string",
                  "format": "uri"
                }
              }
            },
            "Service Details": {
              "type": "object",
              "properties": {
                "Map": {
                  "additionalProperties": {
                    "type": "string"
                  }
                },
                "Cities": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "Language": {
                  "type": "string"
                },
                "Framework": {
                  "type": "string"
                },
                "Internet Facing": {
                  "type": "boolean"
                },
                "Communication Method": {
                  "type": "string"
                }
              }
            },
            "Owners & Pager Duty": {
              "type": "object",
              "required": [
                "Code Owners"
              ],
              "properties": {
                "Code Owners": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "refType": "#/references/users"
                  }
                },
                "On Pager Duty": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "refType": "#/references/users"
                  }
                }
              }
            }
          }
        },
        "createdBy": {
          "type": "object",
          "refType": "#/references/users"
        },
        "createdOn": {
          "type": "string",
          "format": "date-time"
        },
        "description": {
          "type": "string"
        }
      }
    },
    "dependencies": {
      "type": "object"
    }
  }
}
